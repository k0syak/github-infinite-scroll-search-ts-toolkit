{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@src/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@pages": ["./pages"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@hooks": ["./hooks"],
      "@features/*": ["./features/*"],
      "@utils": ["./utils"],
      "@types": ["./types"],
    }
  },
  "include": ["./src"],
  "references": [{"path": "./tsconfig.node.json"}],
  "exclude": [
    "templates",
    "node_modules"
  ]
}
